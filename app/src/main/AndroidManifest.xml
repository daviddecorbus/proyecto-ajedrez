<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.telefonica.first.tableroprueba">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashScreen"
            android:label="@string/splash"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/ejercicio"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"/>
        <activity
        android:name=".ListadoMenu"
        android:label="@string/tipoEjercicios"
        android:screenOrientation="portrait"
        android:theme="@style/AppTheme"/>
        <activity
            android:name=".ListaEjercicios"
            android:label="@string/tipoEjercicios"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"/>
        <activity
            android:name=".Configuracion"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden|screenSize|"
            android:label="@string/menu_configuracion"
            android:theme="@style/AppTheme"/>
    </application>

</manifest>